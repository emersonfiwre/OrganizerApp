<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/btn_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_photo_camera"
        android:drawablePadding="20dp"
        android:text="Camera"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/btn_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_attach"
        android:drawablePadding="20dp"
        android:text="Carregar da galeria"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="15dp"/>
    <TextView
        android:id="@+id/btn_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_attached_file"
        android:drawablePadding="20dp"
        android:text="Carregar documentos"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="15dp"/>

    <!--View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_attached_file"
        android:drawablePadding="5dp"
        android:text="Fechar"
        android:textColor="@color/colorBlack"/-->

</LinearLayout>